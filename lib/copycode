import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: MyHomePage(),
    );
  }
}

class MyHomePage extends StatefulWidget {
  @override
  _MyHomePageState createState() => _MyHomePageState();
}

class _MyHomePageState extends State<MyHomePage> {
  List<bool> isSelected = [false, false, false, false, false]; // ボタンの選択状態を管理

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Flutterボタン選択制限'),
      ),
      body: Center(
        child: ToggleButtons(
          children: <Widget>[
            Text('ボタン1'),
            Text('ボタン2'),
            Text('ボタン3'),
            Text('ボタン4'),
            Text('ボタン5'),
          ],
          isSelected: isSelected,
          onPressed: (int index) {
            setState(() {
              // 選択されたボタンの状態を反転
              isSelected[index] = !isSelected[index];
              
              // 選択されたボタンの数を数える
              int selectedCount = isSelected.where((bool isSelected) => isSelected).length;
              
              // 3つ以上のボタンが選択されている場合は他のボタンを無効にする
              if (selectedCount > 3) {
                isSelected[index] = !isSelected[index];
              }
            });
          },
        ),
      ),
    );
  }
}
